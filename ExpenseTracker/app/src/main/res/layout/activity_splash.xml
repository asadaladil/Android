<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash2"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="268dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:src="@drawable/financial_profit"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:text="@string/info"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:text="@string/info2"
        android:textColor="@color/DarkTurquoise"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginBottom="15dp"
        android:text="@string/info3"
        android:textColor="@color/DarkTurquoise"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginRight="15dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progressTint="@color/DodgerBlue"
        android:layout_marginTop="120dp"
        android:progressBackgroundTint="@color/white"

        />

    <TextView
        android:id="@+id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/load"
        android:textColor="@color/DodgerBlue"
        android:textSize="20sp"
        android:typeface="serif"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="150sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/design"
        android:textColor="@color/black"
        android:layout_gravity="center|right"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:text="@string/name"
        android:textColor="@color/holo_purple"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginRight="10dp"
        />
</LinearLayout>